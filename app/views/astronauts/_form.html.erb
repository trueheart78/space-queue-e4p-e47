<%= simple_form_for(@astronaut) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :image %>
    <% if @astronaut %>
      <p>
      <strong>Current Image:</strong><br>
    <%= image_tag(@astronaut.image) unless @astronaut.image.blank? %>
    </p>
  <% end %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
